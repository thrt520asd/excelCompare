<Window x:Class="excelCompare.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:excelCompare"
        mc:Ignorable="d"
        Title="比较结果" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center">

    <DataGrid Grid.Row="1" ColumnWidth="*" AutoGenerateColumns="False" ItemsSource="{Binding compareResultList}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="行数" Binding="{Binding index}"/>
            <DataGridTextColumn Header="状态" Binding="{Binding oper}"/>
            <DataGridTextColumn Header="内容" Binding="{Binding content}"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
